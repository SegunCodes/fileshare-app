<div class="container" style="margin-top:50px;margin-bottom: 40px;">
    <%- include("includes/alert", {
        req: req
    })%>
    <div class="row">
        <div class="col-md-12">
            <center>
                <h3>Forgot Password</h3>
            </center>
            <form action="/sendRecoveryLink" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" name="email" class="form-control" required id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email">
                    <small id="emailHelp" class="form-text text-muted">A recovery link will be sent to your email <address></address></small>
                </div>
                <button type="submit" class="btn btn-block btn-primary">Send Recovery Link</button>
            </form>
        </div>
    </div>
</div>