<div class="container" style="margin-top:50px;margin-bottom: 40px;">
    <%- include("includes/alert", {
        req: req
    })%>
    <div class="row">
        <div class="col-md-12">
            <center>
                <h3>Login to your account</h3>
            </center>
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" name="email" class="form-control" required id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                  </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" name="password" class="form-control" required id="exampleInputPassword1" placeholder="Password">
                </div>
                <a href="/forgot-password">forgot password?</a>
                <button type="submit" class="btn btn-block btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>